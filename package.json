{
  "name": "poppys-dungeon",
  "version": "0.1.9",
  "private": true,
  "scripts": {
    "start": "node ./dist/server/main.js",

    "postinstall": "cd ./player-client && npm install",

    "prebuild": "npm run client",
    "build": "tsc -p tsconfig.json",
    "postbuild": "npm run overlay",
    "lint": "eslint",
    
    "server": "tsc -p tsconfig.json",
    "server:watch": "tsc -p tsconfig.json --watch",
    
    "client": "cd ./player-client && npm run build",
    "client:watch": "cd ./player-client && npm run start",

    "overlay": "esbuild ./dist/clients/overlay/index.js --bundle --outfile=./dist/builds/overlay.js",
    "overlay:watch": "esbuild ./dist/clients/overlay/index.js --bundle --outfile=./dist/builds/overlay.js --watch",
    
    "deprecated": "echo \"deprecated scripts\"",
    "display-client": "esbuild ./dist/clients/player-client.js --bundle --outfile=./dist/builds/player-client.js",
    "old_client": "esbuild ./dist/clients/player-client.js --bundle --outfile=./dist/builds/player-client.js",
    "predev": "npm run build",
    "dev": "npm run start"
  },
  "dependencies": {
    "@tsconfig/node-lts": "^20.1.3",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/mongo-sanitize": "^1.0.3",
    "@types/morgan": "^1.9.9",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "clean-css": "^4.1.11",
    "constantinople": "^3.1.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.4.5",
    "esbuild": "0.21.4",
    "eslint": "^8.57.0",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "lorem-ipsum": "^2.0.3",
    "md5": "^2.2.1",
    "mersenne-twister": "^1.1.0",
    "mongo-sanitize": "^1.1.0",
    "mongodb": "^6.6.2",
    "morgan": "~1.9.1",
    "pug": "^2.0.4",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "typescript": "^5.4.5",
    "uglify-js": "^2.6.0"
  }
}
